{
  "name": "@jambudipa/dynamic-flow",
  "version": "0.2.2",
  "description": "A TypeScript library for building dynamic AI-driven workflows with LLM planning and static flow composition using Effect",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run typecheck",
    "prepack": "npm run build",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "llm",
    "ai",
    "workflow",
    "orchestration",
    "effect",
    "typescript",
    "dynamic-flow",
    "planning",
    "agent",
    "openai",
    "functional-programming"
  ],
  "author": "Mark Norgate",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jambudipa/dynamic-flow.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@effect/ai": "^0.26.0",
    "@effect/ai-openai": "^0.29.0",
    "@effect/cli": "^0.69.0",
    "@effect/platform": "^0.90.5",
    "@effect/platform-node": "^0.96.0",
    "@effect/schema": "^0.75.5",
    "@faker-js/faker": "^9.9.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/expect": "^3.2.4",
    "@vitest/ui": "^1.6.1",
    "effect": "^3.17.6",
    "eslint": "^8.56.0",
    "glob": "^10.4.5",
    "happy-dom": "^18.0.1",
    "prettier": "^3.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@modelcontextprotocol/server-filesystem": "^2025.8.18",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "commander": "^12.0.0",
    "dotenv": "17.2.1",
    "openai": "^4.104.0",
    "pg": "^8.16.3",
    "uuid": "^11.1.0",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "@effect/ai": "^0.26.0",
    "@effect/ai-openai": "^0.29.0",
    "@effect/cli": "^0.69.0",
    "@effect/platform": "^0.90.5",
    "@effect/platform-node": "^0.96.0",
    "@effect/schema": "^0.75.0",
    "effect": "^3.17.0"
  }
}
